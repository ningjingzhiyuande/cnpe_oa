       </span>
    </li>
    <li></li>
   
    <li> 
		<span class="width_align_right">文件 </span>
	   <span class="width_content">
	   	<%=f.file_field :document%>
	   </span>   
    </li>
    <li></li>
<!--
     <li> 
		<span class="width_align_right">是否推荐到首页 </span>
		<div><%=f.check_box :is_recommend,class: "is_recommend"%></div>   
    </li>  -->  
</ul>
 <div class="actions">
   <input type="submit" class="submit" value="提交"/>
  </div>
 <%end%>
 <script type="text/javascript">


   $(function() {

		$(".article_form").validate({
			ignore: "",
			rules: {
				"cms_dangqun[title]": {
                        minlength: 2,
                        required: true
                    },
                    "cms_dangqun[document]": {
                       
                        required: true
                    }
                },

             messages: {
                "cms_dangqun[title]": {
                   required: "不能为空",
                   minlength: "最少两个字符"
                },
                "cms_dangqun[document]": {
                	required: "不能为空"
                }
              },
			errorPlacement: function(label, element) {
				// position error label after generated textarea
				if (element.is("textarea")) {
				
					label.insertAfter("#content_error");
				} else {
					label.insertAfter(element)
				}
			}

		});
		
	})


</script>
