
<%=render "shared/goods"%>

<div id="main-wrapper">
	<div id="main-content">
		<%=render "shared/notice"%>
        <div class="title">
			<h3>申请物品审核列表
			
		</h3>
		</div>
        <div class="hastable">
					
						<table id="" class="display"> 
						<thead> 
						<tr>
							<th>#审核号</th>
							<th>#审核状态</th>
							<th>物品名称</th> 
						    <th>数量</th>  
						    <th>价钱</th> 
						     	   			
						</tr> 
						</thead> 
						<tbody> 
					
						
						<% @orders.each do |key,value| %>
     					<tr>
        					<td rowspan=<%=value+1%> ><%=link_to key,order_show_pre_goods_path(order_key: key) %></td>	
        					<%os = Order.where(order_key: key)%>
        					<td rowspan=<%=value+1%> ><%=I18n.t("order.#{os.first.try(:status)}") %></td>
        					<%os.each do |order|%>

        					<tr>
        					<td><%=order.pre_good.name %> </td>
        					<td ><%= order.num%></td>
        					<td ><%= order.price %></td>

        				    </tr>

        					<%end%>
        				

        					
  	</tr>
      					
    					<% end %>	
						</tbody>
						

						</table>
						


				
   

</div>
</div>








